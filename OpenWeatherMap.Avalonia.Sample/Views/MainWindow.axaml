<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OpenWeatherMap.Avalonia.Sample.Views.MainWindow"
		x:CompileBindings="False"
        Icon="/Assets/avalonia-logo.ico"
        Title="OpenWeatherMap.Avalonia.Sample">

	<StackPanel VerticalAlignment="Center">
		<Image Height="50" Width="50" Source="{Binding WeatherIcon}" HorizontalAlignment="Center" />
		<TextBlock Text="{Binding CurrentWeather}" HorizontalAlignment="Center" />
		<TextBlock Text="{Binding CurrentTemperature}" HorizontalAlignment="Center" />
		<TextBlock Text="{Binding HighTemperature}" HorizontalAlignment="Center" />
		<TextBlock Text="{Binding LowTemperature}" HorizontalAlignment="Center" />
		<TextBlock Text="{Binding WindDirection}" HorizontalAlignment="Center" />
		<TextBlock Text="{Binding WindSpeed}" HorizontalAlignment="Center" />
	</StackPanel>
</Window>
